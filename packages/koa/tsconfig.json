{
    "compilerOptions": {
        "outDir": "dist",
        "target": "ES6",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "declaration": true
    },
    "exclude": [
        "node_modules"
    ],
}